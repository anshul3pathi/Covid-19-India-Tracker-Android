<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activityBackground"
    tools:context=".IndiaNumbersActivity">

    <TextView
        android:id="@+id/indiaTextView"
        android:layout_width="171dp"
        android:layout_height="71dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:paddingLeft="8dp"
        android:text="India"
        android:textColor="#E65100"
        android:textSize="64sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.151"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.098" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/confirmedCL"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/confirmed_linear_layout_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.316">

        <TextView
            android:id="@+id/confirmedText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Confirmed"
            android:textSize="32sp"
            android:padding="4dp"
            app:layout_constraintTop_toTopOf="@+id/confirmedCL"
            app:layout_constraintLeft_toLeftOf="@+id/confirmedCL"
            app:layout_constraintRight_toRightOf="@+id/confirmedCL"/>

        <TextView
            android:id="@+id/confirmedNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:paddingLeft="50dp"
            android:text="900000"
            android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/confirmedCL"
            app:layout_constraintRight_toRightOf="@+id/confirmedCL"
            app:layout_constraintTop_toTopOf="@+id/confirmedText" />

        <TextView
            android:id="@+id/confirmedNumberIncrease"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:paddingLeft="72dp"
            android:paddingTop="6dp"
            android:text="50000"
            android:textSize="20sp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="@+id/confirmedCL"
            app:layout_constraintRight_toRightOf="@+id/confirmedCL"
            app:layout_constraintTop_toTopOf="@+id/confirmedNumber" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="52dp"
            app:layout_constraintLeft_toLeftOf="@id/confirmedCL"
            app:layout_constraintTop_toTopOf="@id/confirmedNumber"
            android:background="@drawable/increase_plus"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activeCL"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/active_linear_layout_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.926"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.316">

        <TextView
            android:id="@+id/activeText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Active"
            android:textSize="32sp"
            android:textAlignment="center"
            android:padding="4dp"
            app:layout_constraintTop_toTopOf="@+id/activeCL"
            app:layout_constraintLeft_toLeftOf="@+id/activeCL"
            app:layout_constraintRight_toRightOf="@+id/activeCL"/>

        <TextView
            android:id="@+id/activeNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:paddingLeft="50dp"
            android:text="900000"
            android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/activeCL"
            app:layout_constraintRight_toRightOf="@+id/activeCL"
            app:layout_constraintTop_toTopOf="@+id/activeText" />

        <TextView
            android:id="@+id/activeNumberIncrease"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:paddingLeft="72dp"
            android:paddingTop="6dp"
            android:text="50000"
            android:textSize="20sp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="@+id/activeCL"
            app:layout_constraintRight_toRightOf="@+id/activeCL"
            app:layout_constraintTop_toTopOf="@+id/activeNumber" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="52dp"
            app:layout_constraintLeft_toLeftOf="@id/activeCL"
            app:layout_constraintTop_toTopOf="@id/activeNumber"
            android:background="@drawable/increase_plus"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/recoveredCL"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/recovered_linear_layout_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.695">

        <TextView
            android:id="@+id/recoveredText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Recovered"
            android:textSize="30sp"
            android:textAlignment="center"
            android:padding="4dp"
            app:layout_constraintTop_toTopOf="@+id/recoveredCL"
            app:layout_constraintLeft_toLeftOf="@+id/recoveredCL"
            app:layout_constraintRight_toRightOf="@+id/recoveredCL"/>

        <TextView
            android:id="@+id/recoveredNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:paddingLeft="50dp"
            android:text="900000"
            android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/recoveredCL"
            app:layout_constraintRight_toRightOf="@+id/recoveredCL"
            app:layout_constraintTop_toTopOf="@+id/recoveredText" />

        <TextView
            android:id="@+id/recoveredNumberIncrease"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:paddingLeft="72dp"
            android:paddingTop="6dp"
            android:text="50000"
            android:textSize="20sp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="@+id/recoveredCL"
            app:layout_constraintRight_toRightOf="@+id/recoveredCL"
            app:layout_constraintTop_toTopOf="@+id/recoveredNumber" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="52dp"
            app:layout_constraintLeft_toLeftOf="@id/recoveredCL"
            app:layout_constraintTop_toTopOf="@id/recoveredNumber"
            android:background="@drawable/increase_plus"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/deceasedCL"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/deceased_linear_layout_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.926"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.695">

        <TextView
            android:id="@+id/deceasedText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Deceased"
            android:textSize="32sp"
            android:textAlignment="center"
            android:padding="4dp"
            app:layout_constraintTop_toTopOf="@+id/deceasedCL"
            app:layout_constraintLeft_toLeftOf="@+id/deceasedCL"
            app:layout_constraintRight_toRightOf="@+id/deceasedCL"/>

        <TextView
            android:id="@+id/deceasedNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:paddingLeft="50dp"
            android:text="900000"
            android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/deceasedCL"
            app:layout_constraintRight_toRightOf="@+id/deceasedCL"
            app:layout_constraintTop_toTopOf="@+id/deceasedText" />

        <TextView
            android:id="@+id/deceasedNumberIncrease"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:paddingLeft="72dp"
            android:paddingTop="6dp"
            android:text="50000"
            android:textSize="20sp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="@+id/deceasedCL"
            app:layout_constraintRight_toRightOf="@+id/deceasedCL"
            app:layout_constraintTop_toTopOf="@+id/deceasedNumber" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="52dp"
            app:layout_constraintLeft_toLeftOf="@id/deceasedCL"
            app:layout_constraintTop_toTopOf="@id/deceasedNumber"
            android:background="@drawable/increase_plus"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/stateWiseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="State Wise"
        android:textSize="16sp"
        android:onClick="startThirdActivity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.881"
        android:background="@drawable/round_button"/>


</androidx.constraintlayout.widget.ConstraintLayout>